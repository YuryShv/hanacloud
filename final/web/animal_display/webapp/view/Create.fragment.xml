<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  xmlns:layout="sap.ui.layout">
  <Dialog
    id = "createDialog"
    title="{i18n>CreateDialog}"
    class="sapUiPopupWithPadding" >
    <subHeader>
      <Toolbar>
            <Input id="newName" type="Text" placeholder="Animal name ..." ></Input>
            <Input id="newKind" type="Text" placeholder="Animal kind  ..." ></Input>
      </Toolbar>
    </subHeader>
    <content>
    <Text width="300px" text ="New animal has arrived? Add new one here."/>
    </content>
        <beginButton>
      <Button text="Add" press=".animalsCreate" />
    </beginButton>
    <endButton>
      <Button text="Close" press=".onCloseDialog" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>